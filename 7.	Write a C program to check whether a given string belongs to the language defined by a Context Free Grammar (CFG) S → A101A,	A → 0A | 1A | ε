#include <stdio.h>
#include <string.h>

int S(char*);
int A(char*);

int main() {
    char str[100];
    printf("Enter the input string: ");
    scanf("%s", str);

    if(S(str))
        printf("Given string belongs to the language.");
    else
        printf("Given string does not belong to the language.");

    return 0;
}

int S(char* str) {
    int len = strlen(str);

    if(len < 5 || str[0] != 'A' || str[len-1] != 'A' || str[1] != '1' || str[2] != '0' || str[3] != '1') // Check if the given string is of the form A101A
        return 0;
    else
        return A(str+1) && A(str+len-2);
}

int A(char* str) {
    int len = strlen(str);

    if(len == 0)    // Îµ case
        return 1;
    else if(str[0] == '0' || str[0] == '1') { // 0A or 1A case
        str[len-1] = '\0';
        return A(str+1);
    }
    else
        return 0;
}
